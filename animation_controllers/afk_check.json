{
	"format_version": "1.10.0",
	"animation_controllers": {
		"controller.animation.afk_check": {
			"states": {
				"default": {
					"transitions": [
						{
							"afk": "!q.is_moving && q.is_alive"
						}
					],
					"on_exit": [
						"/tag @a[scores={afk_time=300..}] add afk"
					]
				},
				"afk": {
					"animations": [
						"afk_display"
					],
					"transitions": [
						{
							"default": "q.is_moving"
						}
					],
					"on_exit": [
						"/scoreboard players reset @s afk_display",
						"/tag @s remove afk"
					]
				}
			}
		}
	}
}